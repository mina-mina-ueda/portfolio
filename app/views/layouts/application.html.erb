<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <p class="text-center">フレッシュ</p>
        <% if customer_signed_in? %>
          <p><%= current_customer.nickname %>さん</p>
        <% end %>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <ul>
          <% if admin_signed_in? %>
            <div class="row">
              <li class="col-sm-3"><%= link_to "未返答一覧", admin_posts_path, class: "btn btn-secondary " %></li>
              <li class="col-sm-3"><%= link_to "会員一覧", admin_customers_path, class: "btn btn-secondary " %></li>
              <li class="col-sm-3"><%= link_to "イベント", admin_event_posts_path, class: "btn btn-secondary " %></li>
              <li class="col-sm-3"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-secondary " %></li>
            </div>
          <% elsif customer_signed_in? %>
            <div class="row">
              <li class="col-sm-3"><%= link_to "投稿する", new_post_path, class: "btn btn-secondary"  %></li>
              <li class="col-sm-3"><%= link_to "投稿を見る", posts_path, class: "btn btn-secondary"  %></li>
              <li class="col-sm-3"><%= link_to "マイページ", edit_customer_path(current_customer), class: "btn btn-secondary" %></li>
              <li class="col-sm-3"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-secondary" %></li>
            </div>
          <% else %>
            <div class="row">
              <li class="col-sm-3"><%= link_to "About", about_path, class: "btn btn-secondary" %></li>
              <li class="col-sm-3"><%= link_to "投稿一覧", posts_path, class: "btn btn-secondary" %></li>
              <li class="col-sm-3"><%= link_to "新規登録", new_customer_registration_path, class: "btn btn-secondary" %></li>
              <li class="col-sm-3"><%= link_to "ログイン", new_customer_session_path, class: "btn btn-secondary" %></li>
            </div>
          </ul>
          <% end %>
        </div>
      </nav>
   </footer>
  </body>
</html>
