 <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3">
    <div class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
    </div>
    <p class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">フレッシュ</p>
    <div class="col-md-3 text-end">
      <% if customer_signed_in? %>
        <h7 class="ribbon7">ようこそ<strong><%= current_customer.nickname %>さん！</strong></h7>
          <%= link_to "お問い合わせ", new_contact_path, class: "btn-square" %>
        <% if current_customer.admin %>
          <%= link_to "管理者画面", "/adminxxx", class: "btn btn-primary" %>
        <% end %>
      <% elsif admin_signed_in?%>
        <div class="nav-list"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn-giza-grey" %></div>
      <% end %>
    </div>
</header>