<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <div class="form-group">
      <h4 class="form text-center">イベント情報編集</h4>
      <div class="form-body p-4">
        <%= form_with model:@event, url:admin_event_path do |f| %>
              <%= f.text_field :title, class:"form-control" %>
              <h4></h4>
              <%= f.text_area :body, class:"form-control", size: "20x10" %>
              <h4></h4>
              <%= f.date_select :period, {include_blank: true, start_year: 2022, use_month_numbers: true}, {class: 'time-box'} %>まで
          <div class="post-buttom text-center">
          <%= f.submit "編集を保存する", class:"btn-square-shadow-red" %>
          </div>
        <% end %>
　　　</div>
      </div>
    </div>
  </div>
</div>
