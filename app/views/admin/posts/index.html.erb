	<div class="content">
      <h3>お客様投稿一覧</h3>
      <% @post.each do |post| %>
        <div class="card" style="width: 280px;">
          <h3 class="card-header">
            <%= post.category %><%= post.title %>
          </h3>
          <div class="card-body">
            <%= post.body %>
          </div>
          <div class="card-footer">
            <%= link_to "詳しく見る", admin_post_path(post), class: "btn btn-secondary" %>
          </div>
      <% end %>
	</div>
