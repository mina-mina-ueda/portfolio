  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-2">
      <div class="col-md-8">
        <h3 class="text-center">お客様未返答投稿一覧</h3>

          <div class="display_box">
            <% @post.each do |post| %>
              <% if post.response.nil? %>
              <div class="card" style="width: 340px;">
                  <div class="card-header">
                    <button type="button" class="btn btn-outline-primary">
                    <%= post.category %>
                    </button>
                    <%= post.title %>
                  </div>
                <div class="card-body" style="height: 200px;">
                  <div class="card-text">
                    お客様の投稿：<br><%= post.body %>
                  </div>
                </div>
                <div class="card-footer" style="height: 50px;">
                  <%= link_to "返答する", new_admin_post_response_path(post), class: "btn btn-secondary" %>
                  <%= link_to "削除する", admin_post_path(post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-secondary" %>
                </div>
              </div>
             <% end %>
            <% end %>
          </div>

        <%#= paginate @post %>
      </div>

      <div class="col-md-4">
        <h3 class="text-center">イベント情報</h3>
        <h5>66</h5>
        <h5>55</td>
        <%#= link_to "編集する", edit_admin_event_post_path, class: "btn btn-secondary" %>
      </div>

    </div>
  </div>
