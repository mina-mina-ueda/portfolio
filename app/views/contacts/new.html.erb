<div class ="container">
<h4 class="text-center">お問い合わせフォーム</h4>
<%= form_for(@contact, url: confirm_path) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'お名前*' %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

 <div class="form-group">
    <%= f.label :email, '返信先メールアドレス*' %>
    <%= f.text_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, '電話番号*' %>
    <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :subject, '用件*' %><br>
      <%= f.radio_button :subject, Contact.subjects.key(0) %>
      <%= f.label :payment_method, Contact.subjects_i18n[:app] %>
      <br>
      <%= f.radio_button :subject, Contact.subjects.key(1) %>
      <%= f.label :payment_method, Contact.subjects_i18n[:st] %>
  </div>

  <div class="form-group">
    <%= f.label :message, 'メッセージ*' %>
    <%= f.text_area :message, size: '10x10', class: 'form-control' %>
  </div>

  <div>
    <%= f.submit '入力内容確認' %>
  </div>
<% end %>
</div>