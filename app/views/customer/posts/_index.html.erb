<% responses.each do |response| %>
  <div class="post-card" style="height: 550px;">
    <% if response.post.favorited_by?(current_customer) %>

    　<%= link_to post_favorites_path(response.post_id), method: :delete do %>
      <i class="fas fa-heart"></i><%= response.post.favorites.count %>わかる！
      <% end %>

    <% else %>

      <%= link_to post_favorites_path(response.post_id), method: :post do %>
        <i class="far fa-heart"></i><%= response.post.favorites.count %> わかる！
      <% end %>

    <% end %>
      <h4 class="post-title">
        <%= response.post.title %>
      </h4>
        <div class="opinion" style="height: 200px;">
        <strong>お客様の投稿</strong>：<i class="fas fa-user"></i><p class="category"><%= response.post.category %></p><br>
        　<%= response.post.body %>
        </div>
        <div class="response" style="height: 200px;">
      <div class="card-text">
          <strong>店長からの返答</strong>：<i class="fas fa-user-tie"></i><br>
          <%= response.response %>
        </div>
      </div>
  </div>
<% end %>
