<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light py-4 mb-0">ログイン</h4>
      <% if flash[:danger] %>
        <p class="text-red"><%= flash[:danger] %></p>
      <% end %>
      <div class="form-body p-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
              <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
            </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
            </div>
          <div class="input-group mb-3">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          </div>
            <%= f.submit "ログイン", class:"btn-gradient" %>
            </div>
          </div>
        <% end %>
      </div>
        <p class="text-center">登録がまだの方は新規登録へどうぞ</p>
    </div>
  </div>
</div>