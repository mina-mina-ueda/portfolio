<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light py-4 mb-0">マイページ編集</h4>
      <div class="form-body p-4">
        <%= form_with model:@customer, local:true do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="nickname"></i></span>
            </div>
              <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
          </div>
            
            
            
            <% end %>
          </div>
            <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-info mt-5" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>