<% if customer_signed_in? %>
  <% if post.favorited_by?(current_customer) %>
    <%= link_to post_favorites_path(post.id), class: "text-danger", method: :delete, remote: true do %>
    <i class="fas fa-heart"></i><%= post.favorites.count %>わかる！
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post.id), class: "text-danger", method: :post, remote: true do %>
    <i class="far fa-heart"></i><%= post.favorites.count %> わかる！
    <% end %>
  <% end %>
<% else %>
  <i class="fas fa-heart"></i><%= post.favorites.count %> わかる！
<% end %>