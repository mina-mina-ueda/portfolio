<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light py-4 mb-0">新規登録</h4>
        <div class="form-body p-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customer/shared/error_messages", resource: resource %>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="nickname"></i></span>
            </div>
              <%= f.text_field :nickname, autofocus: true, class:"form-control", id:"nickname", placeholder:"ニックネーム" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="email"></i></span>
            </div>
              <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="password"></i></span>
            </div>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="password"></i></span>
            </div>
    　　　　  　　　<%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputEmail", placeholder:"パスワード確認" %>
            </div>
          <div class="input-group mb-3">
            <%= f.label :gender, '性別' %>
            <%= f.select :gender, {'男性': 1, '女性': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
          </div>
          <div class="input-group mb-3">
            <%= f.label :age, '年齢' %>
            <%= f.select :age, {'10代': 1, '20代': 2, '30代': 3, '40代': 3, '50代': 5, '60代': 6, '70代': 7, '80代': 8, '90代': 9, 'その他': 10}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
          </div>
          <div class="input-group mb-3">
            <%= f.label :work, '職業' %>
            <%= f.select :work, {'公務員': 1, '会社員': 2, '自営業': 3, '専業主婦': 4, 'パート・アルバイト': 5, '学生': 6, 'その他': 7}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
          </div>
          <div class="input-group mb-3">
            <%= f.label :access, '来店手段' %>
            <%= f.select :access, {'徒歩': 1, '自転車': 2, '車': 3, 'バス': 4, 'その他': 5}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
          </div>
    <%= f.submit "Sign up", class:"btn btn-lg btn-block btn-info mt-5" %>
  </div>
<% end %>
<%= render "customer/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>