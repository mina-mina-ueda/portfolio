<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class="text-center">イベントの内容</h2>
              <h4>タイトル</h4>
              <%= @event.title %>
              <h4>本文<%= @event.body %></h4>
              <h4>期間</h4>
              <%= @event.period %>
      <div class="form-group">
      <h2 class="text-center">イベントに投稿する</h2>
      <div class="form-body p-4">
        <%= form_with model:@event_post, url:event_event_posts_path(@event) do |f| %>
              <h4>本文</h4>
              <%= f.text_area :body %>
          <div class="post-buttom text-center">
          <%= f.submit "イベントに投稿", class:"btn btn-info" %>
          </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
